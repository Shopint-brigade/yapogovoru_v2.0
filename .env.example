# Server Configuration
NODE_ENV=development
PORT=5000
SESSION_SECRET=your_session_secret_here

# Telegram Bot Configuration (required for authentication)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Bot username (without @) for the login widget
VITE_TELEGRAM_BOT_USERNAME=your_bot_username

# Airtable Configuration (required)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Redis Configuration (optional - for persistent sessions in production)
# Railway.app provides this automatically when you add a Redis service
# REDIS_URL=redis://localhost:6379
